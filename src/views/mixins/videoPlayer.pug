mixin videoPlayer(video ={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src, autoplay=true)
        .videoPlayer__controls        
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
            .videoPlayer__column
                .fullBar
                    .progressBar
                .timeBar
                    span#currentTime 00:00:00
                    span / 
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" value="0.5" step="0.1")
                span#jsFullScreen
                    i.fas.fa-expand